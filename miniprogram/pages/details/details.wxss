/* pages/details/details.wxss */
.iname:not(:last-child)>view::after{
  content:",";
}
.img{
  width:280rpx;
  height:400rpx;
  margin:20rpx;
  position: absolute;
  top:0;
}
.img image{
  width:100%;
  height:100%;
}
.filter{
  width:400rpx;
  height:450rpx;
  filter:blur(40rpx);
  opacity: .9;
  margin:0 auto;
}
.content{
  display: flex;
  position: relative;
  top:0;
}
.right>view{
  display: flex;
  flex-wrap: wrap;
  margin:10rpx;
  color:#fff;
}
.right{
  position: absolute;
  left:300rpx;
  font-size:24rpx;
  top:20rpx;
}
.bo{
  position: absolute;
  top:500rpx;
}
.mask{
  width:100%;
  height:470rpx;
  background: #333;
  position: absolute;
  top:0;
  z-index: -1;
}
.add{
  width:100%;
  height:400rpx;
  background: #000;
  color:#ff0;
  line-height: 400rpx;
  text-align: center;
  font-size:400rpx;
}
.ps{
  display: flex;
  flex-wrap: wrap;
}
.ps view{
  width:33.3%;
  height:200rpx;
}
.ps view image{
  width:100%;
  height:100%;
}
.go button{
  background: green;
  color:#fff;
}